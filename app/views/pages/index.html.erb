<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
      Startups on Rails
    </h1>
    <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
      Discover innovative companies, technologies, and solutions built with Ruby on Rails
    </p>
  </div>
  <%= render "featured_section", 
      title: "Featured Companies",
      items: @featured_companies,
      view_all_path: companies_path %>

  <%= render "featured_section", 
      title: "Featured Technologies",
      items: @featured_technologies,
      view_all_path: technologies_path %>

  <%= render "featured_section", 
      title: "Featured Solutions", 
      items: @featured_solutions,
      view_all_path: solutions_path %>
</div>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Curated Collections</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @featured_listings.each do |listing| %>
      <%= render "shared/featured_listing_card", listing: listing %>
    <% end %>
  </div>
</div>
