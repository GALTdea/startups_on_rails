<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-6">
        <div class="flex justify-between items-start mb-6">
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= @solution.name %></h1>
            <p class="mt-2 text-sm text-gray-500">by <%= @company.name %></p>
          </div>
          <span class="px-4 py-2 text-sm font-medium rounded-full <%= solution_type_badge_class(@solution.solution_type) %>">
            <%= @solution.solution_type.titleize %>
          </span>
        </div>

        <div class="prose max-w-none mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Description</h2>
          <p class="text-gray-600"><%= @solution.description %></p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Details</h3>
            <dl class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Website</dt>
                <dd class="mt-1">
                  <%= link_to @solution.website, @solution.website, target: "_blank", class: "text-blue-600 hover:underline" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Pricing</dt>
                <dd class="mt-1 text-gray-900"><%= @solution.pricing %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Deployment Type</dt>
                <dd class="mt-1 text-gray-900"><%= @solution.deployment_type.titleize %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Popularity</dt>
                <dd class="mt-1 text-gray-900"><%= @solution.popularity %></dd>
              </div>
            </dl>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Company Information</h3>
            <div class="space-y-4">
              <div>
                <dt class="text-sm font-medium text-gray-500">Company Name</dt>
                <dd class="mt-1 text-gray-900"><%= @company.name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Company Website</dt>
                <dd class="mt-1">
                  <%= link_to @company.website, @company.website, target: "_blank", class: "text-blue-600 hover:underline" %>
                </dd>
              </div>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-4">
          <%= link_to company_solutions_path(@company), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Solutions
          <% end %>

          <% if @company.owner == current_user || current_user.admin? %>
            <%= link_to edit_company_solution_path(@company, @solution), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit Solution
            <% end %>

            <%= button_to company_solution_path(@company, @solution), method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: { turbo_confirm: "Are you sure you want to delete this solution?" } do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Solution
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
