<div class="max-w-7xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Company Directory</h1>
  
  <!-- Search and Filters -->
  <div class="mb-8 bg-white p-6 rounded-lg shadow-sm">
    <%= form_with url: companies_path, method: :get, 
      data: { controller: "filter-form", turbo_frame: "companies" } do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Search Input -->
        <div>
          <%= f.label :search, "Search Companies", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search, value: params[:search],
            class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
            placeholder: "Search by name or description..." %>
        </div>

        <!-- Multiple select for categories -->
        <div>
          <%= f.label :categories, "Categories", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :categories, 
                Category.order(:name), 
                :id, :name,
                { selected: params[:categories], include_blank: false },
                { multiple: true, 
                  class: "tom-select",
                  data: { controller: "tom-select" } } %>
        </div>

        <!-- Multiple select for tags -->
        <div class="mb-4">
          <%= f.label :tags, "Filter by Technologies", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative" data-controller="tag-filter">
            <%= f.collection_select :tags, 
                  Tag.order(:name), 
                  :id, :name,
                  { selected: params[:tags], include_blank: false },
                  { multiple: true,
                    class: "tom-select",
                    data: {
                      controller: "tom-select",
                      action: "change->filter-form#submit"
                    } } %>
            
            <% if params[:tags].present? %>
              <div class="mt-2 flex flex-wrap gap-2">
                <% Tag.where(id: params[:tags]).each do |tag| %>
                  <%= link_to companies_path(params.to_unsafe_h.except(:tags).merge(tags: params[:tags] - [tag.id.to_s])), 
                        class: "flex items-center px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-sm hover:bg-blue-200",
                        data: { turbo_action: "replace" } do %>
                    <%= tag.name %>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end space-x-4">
        <%= link_to "Clear Filters", companies_path, class: "px-4 py-2 text-gray-600 hover:text-gray-800" %>
        <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>

  <!-- Company Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @companies.each do |company| %>
      <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex items-center mb-4">
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= link_to company.name, company_path(company), class: "hover:text-blue-600" %>
            </h3>
            <% if company.location.present? %>
              <p class="text-sm text-gray-500 mt-1">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= company.location %>
              </p>
            <% end %>
          </div>
        </div>
        
        <p class="text-sm text-gray-600 mb-4"><%= truncate(company.description, length: 120) %></p>
        
        <% if company.website.present? %>
          <%= link_to company.website, company.website, 
            class: "text-blue-600 hover:text-blue-800 text-sm", target: "_blank" %>
        <% end %>
        
        <% if company.tags.any? %>
          <div class="mt-4 flex flex-wrap gap-2">
            <% company.tags.each do |tag| %>
              <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded-full text-xs">
                <%= tag.name %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if @companies.empty? %>
    <div class="text-center py-12 text-gray-500">
      No companies found matching your criteria
    </div>
  <% end %>
</div>
