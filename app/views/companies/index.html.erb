<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
      Company Directory
    </h1>
    <p class="text-gray-500">Discover amazing companies changing the world üåç</p>
  </div>

  <!-- Search and Filters -->
  <div class="mb-8 bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
    <%= form_with url: companies_path, method: :get, 
      data: { controller: "filter-form", turbo_frame: "companies" },
      class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Search Input -->
        <div>
          <%= f.label :search, "üîç Search Companies", class: "block text-sm font-medium text-blue-600 mb-1" %>
          <%= f.text_field :search, value: params[:search],
            class: "w-full rounded-xl border-gray-200 shadow-sm focus:border-blue-300 focus:ring-2 focus:ring-blue-200 transition-all",
            placeholder: "Start typing..." %>
        </div>

        <!-- Multiple select for categories -->
        <div>
          <%= f.label :categories, "Categories", class: "block text-sm font-medium text-blue-600 mb-1" %>
          <%= f.collection_select :categories, 
                Category.order(:name), 
                :id, :name,
                { selected: params[:categories], include_blank: false },
                { multiple: true, 
                  class: "tom-select",
                  data: { controller: "tom-select" } } %>
        </div>

        <!-- Multiple select for tags -->
        <div class="mb-4">
          <%= f.label :tags, "Filter by Technologies", class: "block text-sm font-medium text-blue-600 mb-2" %>
          <div class="relative" data-controller="tag-filter">
            <%= f.collection_select :tags, 
                  Tag.order(:name), 
                  :id, :name,
                  { selected: params[:tags], include_blank: false },
                  { multiple: true,
                    class: "tom-select",
                    data: {
                      controller: "tom-select",
                      action: "change->filter-form#submit"
                    } } %>
            
            <% if params[:tags].present? %>
              <div class="mt-2 flex flex-wrap gap-2">
                <% Tag.where(id: params[:tags]).each do |tag| %>
                  <%= link_to companies_path(params.to_unsafe_h.except(:tags).merge(tags: params[:tags] - [tag.id.to_s])), 
                        class: "flex items-center px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-sm hover:bg-blue-200",
                        data: { turbo_action: "replace" } do %>
                    <%= tag.name %>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end space-x-4 mt-6">
        <%= link_to "Clear Filters", companies_path, 
              class: "px-4 py-2 text-gray-400 hover:text-blue-600 transition-colors" %>
        <%= f.submit "Apply Filters", 
              class: "px-6 py-2 bg-gradient-to-r from-blue-500 to-purple-500 text-white rounded-xl hover:scale-[1.02] transform transition-all shadow-md hover:shadow-lg" %>
      </div>
    <% end %>
  </div>

  <!-- Company Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @companies.each do |company| %>
      <div class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all p-6 border-2 border-transparent hover:border-blue-50 relative">
        <div class="absolute top-4 right-4 w-12 h-12 rounded-lg bg-gray-50 flex items-center justify-center overflow-hidden">
          <% if company.logo.attached? %>
            <%= image_tag company.logo, class: "w-8 h-8 object-contain" %>
          <% else %>
            <span class="text-2xl">üè¢</span>
          <% end %>
        </div>
        
        <div class="mb-4">
          <h3 class="text-xl font-bold text-gray-900">
            <%= link_to company.name, company_path(company), 
                  class: "hover:text-blue-600 hover:underline decoration-wavy decoration-blue-200" %>
          </h3>
          <% if company.location.present? %>
            <p class="text-sm text-blue-500 mt-2 flex items-center">
              <svg class="w-4 h-4 mr-1.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <%= company.location %>
            </p>
          <% end %>
        </div>
        
        <p class="text-sm text-gray-500 mb-4 leading-relaxed"><%= truncate(company.description, length: 120) %></p>
        
        <% if company.website.present? %>
          <%= link_to company.website, company.website, 
            class: "text-blue-600 hover:text-blue-800 text-sm", target: "_blank" %>
        <% end %>
        
        <% if company.tags.any? %>
          <div class="mt-4 flex flex-wrap gap-2">
            <% company.tags.each do |tag| %>
              <span class="px-3 py-1 bg-gradient-to-br from-blue-50 to-purple-50 text-gray-600 rounded-full text-xs font-medium border border-blue-100">
                #<%= tag.name %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if @companies.empty? %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">üòï</div>
      <p class="text-gray-500 text-lg font-medium">No companies found<br><span class="text-sm font-normal">Try adjusting your filters</span></p>
    </div>
  <% end %>
</div>
