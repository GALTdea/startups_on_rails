<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
      Company Directory
    </h1>
    <p class="text-gray-500">Discover amazing companies changing the world üåç</p>
  </div>

  <!-- Search and Filters -->
  <div class="mb-8 bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all">
    <div class="flex flex-col items-center justify-between p-6 space-y-4 md:flex-row md:space-y-0 md:space-x-4">
      <%= form_with url: companies_path, method: :get, 
           data: { controller: "filter-form", turbo_frame: "companies" },
           class: "w-full" do |f| %>
        <div class="flex flex-col md:flex-row md:items-center md:space-x-4 w-full">
          <!-- Search Input -->
          <div class="w-full md:w-1/2">
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-500 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
              </div>
              <%= f.text_field :search, value: params[:search],
                class: "w-full pl-10 pr-4 py-3 text-sm text-gray-900 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-all",
                placeholder: "Search companies..." %>
            </div>
          </div>

          <!-- Filter Dropdown -->
          <div class="flex items-center space-x-3">
            <div class="relative" data-controller="dropdown">
              <button type="button" 
                data-action="dropdown#toggle" 
                class="flex items-center justify-center px-4 py-3 text-sm font-medium text-gray-700 bg-gray-50 border border-gray-200 rounded-xl hover:bg-white hover:border-blue-300 focus:ring-2 focus:ring-blue-300 transition-all">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
                </svg>
                Filter
                <span class="ml-2 bg-blue-100 text-blue-600 px-2 py-0.5 rounded-full text-xs">
                  <%= params[:tags]&.size || 0 %>
                </span>
              </button>
              
              <!-- Dropdown menu -->
              <div class="hidden absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-xl border border-gray-100 z-10" data-dropdown-target="menu">
                <div class="p-4 space-y-2 max-h-96 overflow-y-auto">
                  <% Tag.all.each do |tag| %>
                    <label class="flex items-center space-x-2 p-2 hover:bg-gray-50 rounded-md cursor-pointer">
                      <%= check_box_tag "tags[]", tag.id, Array(params[:tags]).include?(tag.id.to_s),
                            class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                      <span class="text-sm text-gray-700"><%= tag.name %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>

            <%= link_to companies_path, 
                  class: "px-4 py-3 text-sm font-medium text-gray-600 hover:text-blue-600 transition-colors",
                  data: { turbo_action: "replace" } do %>
              Clear
            <% end %>
          </div>
        </div>
      <% end %>

      <% if user_signed_in? && (current_user.admin? || current_user.company_owner?) %>
        <%= link_to new_admin_company_path, 
          class: "flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl hover:from-blue-700 hover:to-blue-800 focus:ring-2 focus:ring-blue-300 transition-all shadow-sm hover:shadow" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
          </svg>
          Add Company
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Company Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @companies.each do |company| %>
      <div class="group bg-white rounded-xl shadow-sm hover:shadow-lg transition-all p-6 border-2 border-transparent hover:border-blue-50 relative">
        <div class="absolute top-4 right-4 w-12 h-12 rounded-lg bg-gray-50 flex items-center justify-center overflow-hidden">
          <% if company.logo.attached? %>
            <%= image_tag company.logo, class: "w-8 h-8 object-contain" %>
          <% else %>
            <span class="text-2xl">üè¢</span>
          <% end %>
        </div>
        
        <div class="mb-4">
          <h3 class="text-xl font-bold text-gray-900">
            <%= link_to company.name, company_path(company), 
                  class: "hover:text-blue-600 hover:underline decoration-wavy decoration-blue-200" %>
          </h3>
          <% if company.location.present? %>
            <p class="text-sm text-blue-500 mt-2 flex items-center">
              <svg class="w-4 h-4 mr-1.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <%= company.location %>
            </p>
          <% end %>
        </div>
        
        <p class="text-sm text-gray-500 mb-4 leading-relaxed"><%= truncate(company.description, length: 120) %></p>
        
        <% if company.website.present? %>
          <%= link_to company.website, company.website, 
            class: "text-blue-600 hover:text-blue-800 text-sm", target: "_blank" %>
        <% end %>
        
        <% if company.tags.any? %>
          <div class="mt-4 flex flex-wrap gap-2">
            <% company.tags.each do |tag| %>
              <span class="px-3 py-1 bg-gradient-to-br from-blue-50 to-purple-50 text-gray-600 rounded-full text-xs font-medium border border-blue-100">
                #<%= tag.name %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if @companies.empty? %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">üòï</div>
      <p class="text-gray-500 text-lg font-medium">No companies found<br><span class="text-sm font-normal">Try adjusting your filters</span></p>
    </div>
  <% end %>
</div>
