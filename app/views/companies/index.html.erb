<%# Breadcrumbs %>
<% content_for :breadcrumbs do %>
  <li>
    <div class="flex items-center">
      <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
      <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Companies</span>
    </div>
  </li>
<% end %>

<%# Page Title %>
<% content_for :title, "Companies Directory | StartupsOnRails" %>

<div class="max-w-7xl mx-auto px-4 py-8">
  <!-- Header Section -->
  <div class="mb-8 text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
      Company Directory
    </h1>
    <p class="text-gray-500">Discover amazing companies changing the world üåç</p>
  </div>

  <!-- Search and Filters -->
  <div class="mb-8 bg-white rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all">
    <div class="p-6">
      <%= form_with url: companies_path, method: :get, 
           id: "company-search-form",
           data: { controller: "filter-form", turbo_frame: "companies" },
           class: "w-full" do |f| %>
        
        <!-- Hidden fields for tech stacks -->
        <% if params[:tech_stacks].present? && params[:tech_stacks].is_a?(Array) && params[:tech_stacks].length > 1 %>
          <% Array(params[:tech_stacks])[1..-1].each do |tech| %>
            <%= f.hidden_field "tech_stacks[]", value: tech %>
          <% end %>
        <% end %>
        
        <div class="flex flex-col space-y-4 md:space-y-0 md:flex-row md:items-center md:space-x-4 w-full">
          <!-- Search Input -->
          <div class="w-full md:w-3/5 relative">
            <div class="relative group">
              <div class="absolute inset-y-0 left-0 flex items-center pl-4 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-500 transition-colors" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <%= f.text_field :search, value: params[:search],
                id: "company-search-input",
                class: "w-full pl-12 pr-12 py-4 text-base text-gray-900 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-blue-300 focus:border-blue-300 transition-all",
                placeholder: "Search by name, description, or location...",
                autocomplete: "off" %>
              
              <% if params[:search].present? %>
                <button type="button" 
                  onclick="document.getElementById('company-search-input').value = ''; this.closest('form').requestSubmit();"
                  class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-400 hover:text-gray-600">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              <% end %>
            </div>
          </div>

          <!-- Filter Controls -->
          <div class="flex flex-1 space-x-3">
            <!-- Filter Button -->
            <div class="relative inline-block text-left flex-grow md:flex-grow-0" data-controller="modal">
              <div class="w-full md:w-auto">
                <button type="button" 
                  data-action="modal#toggle"
                  class="w-full md:w-auto flex items-center justify-center px-5 py-4 text-sm font-medium text-gray-700 bg-gray-50 border border-gray-200 rounded-xl hover:bg-white hover:border-blue-300 focus:ring-2 focus:ring-blue-300 transition-all">
                  <svg class="w-4 h-4 mr-2 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd"></path>
                  </svg>
                  Filters
                  <% filter_count = (params[:tags]&.size || 0) + (params[:industry]&.size || 0) + (params[:tech_stacks].present? ? 1 : 0) %>
                  <% if filter_count > 0 %>
                    <span class="ml-2 bg-blue-100 text-blue-600 px-2.5 py-1 rounded-full text-xs font-semibold">
                      <%= filter_count %>
                    </span>
                  <% end %>
                </button>
              </div>

              <div data-modal-target="dropdown"
                   class="hidden absolute right-0 z-50 mt-3 w-96 origin-top-right transform opacity-0 scale-95 transition-all duration-150 ease-out rounded-xl bg-white ring-1 shadow-xl ring-black/5 focus:outline-none border border-gray-100"
                   role="menu">
                <div class="p-6 space-y-6">
                  <div class="flex items-center justify-between border-b border-gray-100 pb-4">
                    <h3 class="text-base font-semibold text-gray-900">Filters</h3>
                    <%= link_to "Clear All", companies_path(search: params[:search]), 
                          class: "text-sm font-medium text-blue-600 hover:text-blue-700 hover:underline transition-colors",
                          data: { turbo_action: "replace" } %>
                  </div>
                  
                  <!-- Tech Stack Filter Section -->
                  <div class="border-b border-gray-100 pb-5">
                    <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">Tech Stack</h4>
                    <div class="grid grid-cols-2 gap-2.5">
                      <% tech_stacks = ["React", "Ruby on Rails", "Next.js", "Svelte", "Node.js", "Vue.js", "Django", "Laravel", "ASP.NET", "Flask", "WordPress", "Shopify", "Python", "AWS"] %>
                      <% tech_stacks.each do |tech| %>
                        <% is_selected = params[:tech_stacks].is_a?(Array) ? 
                                       params[:tech_stacks].include?(tech) : 
                                       params[:tech_stacks] == tech %>
                        <label class="flex items-center space-x-2 px-3 py-2.5 rounded-lg <%= is_selected ? 'bg-blue-50 border border-blue-200' : 'bg-gray-50 border border-gray-200 hover:bg-blue-50 hover:border-blue-200' %> transition-colors cursor-pointer">
                          <%= radio_button_tag "tech_stacks", tech, is_selected, 
                              class: "h-4 w-4 text-blue-600 border-gray-300 rounded-full focus:ring-blue-500" %>
                          <span class="text-xs font-medium <%= is_selected ? 'text-blue-700' : 'text-gray-700' %>"><%= tech %></span>
                        </label>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Industry Filter Section -->
                  <div class="border-b border-gray-100 pb-5">
                    <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">Industry</h4>
                    <div class="grid grid-cols-2 gap-2.5">
                      <% industries = [["Tech", "tech"], ["Healthcare", "healthcare"], ["Finance", "finance"], ["Education", "education"], ["Retail", "retail"]] %>
                      <% industries.each do |label, value| %>
                        <% is_selected = Array(params[:industry]).include?(value) %>
                        <label class="flex items-center space-x-2 px-3 py-2.5 rounded-lg <%= is_selected ? 'bg-blue-50 border border-blue-200' : 'bg-gray-50 border border-gray-200 hover:bg-blue-50 hover:border-blue-200' %> transition-colors cursor-pointer">
                          <%= check_box_tag "industry[]", value, is_selected, 
                              class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                          <span class="text-xs font-medium <%= is_selected ? 'text-blue-700' : 'text-gray-700' %>"><%= label %></span>
                        </label>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- All Tags Section -->
                  <div>
                    <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-3">All Tags</h4>
                    <div class="grid grid-cols-2 gap-3 max-h-64 overflow-y-auto pr-1 custom-scrollbar">
                      <% Tag.all.each do |tag| %>
                        <% is_selected = Array(params[:tags]).include?(tag.id.to_s) %>
                        <label class="flex items-center space-x-3 p-2.5 rounded-lg <%= is_selected ? 'bg-blue-50 border border-blue-200' : 'bg-gray-50 border border-gray-200 hover:bg-blue-50 hover:border-blue-200' %> transition-colors cursor-pointer">
                          <%= check_box_tag "tags[]", tag.id, is_selected,
                                class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                          <span class="text-sm font-medium <%= is_selected ? 'text-blue-700' : 'text-gray-700' %>"><%= tag.name %></span>
                        </label>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- Filter Action Buttons -->
                  <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                    <button type="button" 
                            data-action="modal#toggle" 
                            class="text-sm text-gray-600 hover:text-gray-800 flex items-center bg-gray-100 hover:bg-gray-200 transition-colors px-3 py-2 rounded-lg">
                      <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                      </svg>
                      Close
                    </button>
                    
                    <button type="submit" 
                            class="text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 px-5 py-2.5 rounded-lg transition-colors flex items-center shadow-sm hover:shadow">
                      <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
                      </svg>
                      Apply Filters
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Search Button -->
            <button type="submit"
              class="flex items-center justify-center px-6 py-4 text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl hover:from-blue-700 hover:to-blue-800 focus:ring-2 focus:ring-blue-300 transition-all shadow-sm hover:shadow flex-grow md:flex-grow-0">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
              </svg>
              Search
            </button>
          </div>
        </div>

        <!-- Popular Filters Section -->
        <div class="mt-6 pt-6 border-t border-gray-100">
          <div class="flex items-center space-x-3 mb-3">
            <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
            </svg>
            <span class="text-xs font-medium text-gray-500 uppercase tracking-wider">Popular filters</span>
          </div>
          <div class="flex flex-wrap gap-2">
            <%= link_to companies_path(tech_stacks: "Ruby on Rails"), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-blue-50 to-indigo-50 text-blue-700 border border-blue-100 hover:from-blue-100 hover:to-indigo-100 hover:border-blue-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM14 11a1 1 0 011 1v1h1a1 1 0 110 2h-1v1a1 1 0 11-2 0v-1h-1a1 1 0 110-2h1v-1a1 1 0 011-1z" />
              </svg>
              Rails startups
            <% end %>
            
            <%= link_to companies_path(industry: ["tech"]), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-green-50 to-teal-50 text-green-700 border border-green-100 hover:from-green-100 hover:to-teal-100 hover:border-green-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11 4a1 1 0 10-2 0v4a1 1 0 102 0V7zm-3 1a1 1 0 10-2 0v3a1 1 0 102 0V8zM8 9a1 1 0 00-2 0v2a1 1 0 102 0V9z" clip-rule="evenodd" />
              </svg>
              Tech industry
            <% end %>
            
            <%= link_to companies_path(tech_stacks: "React"), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-cyan-50 to-blue-50 text-cyan-700 border border-cyan-100 hover:from-cyan-100 hover:to-blue-100 hover:border-cyan-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-cyan-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z" />
              </svg>
              React startups
            <% end %>
            
            <%= link_to companies_path(industry: ["finance"]), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-purple-50 to-indigo-50 text-purple-700 border border-purple-100 hover:from-purple-100 hover:to-indigo-100 hover:border-purple-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-purple-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              Finance startups
            <% end %>
            
            <%= link_to companies_path(tech_stacks: "AWS"), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-yellow-50 to-amber-50 text-yellow-700 border border-yellow-100 hover:from-yellow-100 hover:to-amber-100 hover:border-yellow-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd" />
              </svg>
              AWS-powered
            <% end %>
            
            <%= link_to companies_path(industry: ["healthcare"]), 
                  class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-lg bg-gradient-to-r from-red-50 to-rose-50 text-red-700 border border-red-100 hover:from-red-100 hover:to-rose-100 hover:border-red-200 transition-all shadow-sm hover:shadow", 
                  data: { turbo_action: "replace" } do %>
              <svg class="w-4 h-4 mr-1.5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
              </svg>
              Healthcare
            <% end %>
          </div>
        </div>

        <!-- Active Filters Display -->
        <% if params[:search].present? || params[:tags].present? || params[:industry].present? || params[:tech_stacks].present? %>
          <div class="mt-6 pt-6 border-t border-gray-100">
            <div class="flex flex-wrap items-center gap-2">
              <span class="text-xs font-medium text-gray-500 flex items-center mr-1">
                <svg class="w-3.5 h-3.5 mr-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
                </svg>
                Active filters:
              </span>
              
              <% if params[:search].present? %>
                <div class="flex items-center bg-blue-50 text-blue-700 px-3 py-1.5 rounded-full text-xs font-medium group hover:bg-blue-100 transition-colors">
                  <span>Search: <%= params[:search] %></span>
                  <%= link_to companies_path(tags: params[:tags], industry: params[:industry], tech_stacks: params[:tech_stacks]), 
                        class: "ml-2 text-blue-500 group-hover:text-blue-700 transition-colors",
                        data: { turbo_action: "replace" } do %>
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
              
              <% if params[:industry].present? %>
                <% Array(params[:industry]).each do |industry| %>
                  <div class="flex items-center bg-blue-50 text-blue-700 px-3 py-1.5 rounded-full text-xs font-medium group hover:bg-blue-100 transition-colors">
                    <span>Industry: <%= industry.titleize %></span>
                    <%= link_to companies_path(search: params[:search], tags: params[:tags], tech_stacks: params[:tech_stacks], industry: Array(params[:industry]) - [industry]), 
                          class: "ml-2 text-blue-500 group-hover:text-blue-700 transition-colors",
                          data: { turbo_action: "replace" } do %>
                      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
              
              <% if params[:tech_stacks].present? %>
                <% tech_stack = params[:tech_stacks].is_a?(Array) ? params[:tech_stacks].first : params[:tech_stacks] %>
                <div class="flex items-center bg-blue-50 text-blue-700 px-3 py-1.5 rounded-full text-xs font-medium group hover:bg-blue-100 transition-colors">
                  <span><svg class="w-3 h-3 mr-1 inline" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg><%= tech_stack %></span>
                  <%= link_to companies_path(search: params[:search], tags: params[:tags], industry: params[:industry]), 
                        class: "ml-2 text-blue-500 group-hover:text-blue-700 transition-colors",
                        data: { turbo_action: "replace" } do %>
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              <% end %>
              
              <% if params[:tags].present? %>
                <% Tag.where(id: params[:tags]).each do |tag| %>
                  <div class="flex items-center bg-blue-50 text-blue-700 px-3 py-1.5 rounded-full text-xs font-medium group hover:bg-blue-100 transition-colors">
                    <span>#<%= tag.name %></span>
                    <%= link_to companies_path(search: params[:search], tags: params[:tags] - [tag.id.to_s], industry: params[:industry], tech_stacks: params[:tech_stacks]), 
                          class: "ml-2 text-blue-500 group-hover:text-blue-700 transition-colors",
                          data: { turbo_action: "replace" } do %>
                      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
