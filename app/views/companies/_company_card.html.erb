<div class="bg-white rounded-xl shadow hover:shadow-lg transition-all duration-200 border border-gray-100 overflow-hidden group">
  <!-- Company Header with Logo and Status -->
  <div class="p-5 flex items-center gap-4">
    <div class="w-14 h-14 rounded-lg bg-gray-50 flex items-center justify-center overflow-hidden border border-gray-100">
      <% if company.logo.attached? %>
        <%= image_tag company.logo, class: "w-12 h-12 object-contain" %>
      <% else %>
        <span class="text-2xl">üè¢</span>
      <% end %>
    </div>
    
    <div class="flex-1">
      <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
        <%= link_to company.name, company_path(company), class: "hover:text-blue-600" %>
      </h3>
      <% if company.published? %>
        <span class="inline-flex items-center text-xs font-medium text-green-600 mt-1">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
          Actively Hiring
        </span>
      <% end %>
    </div>
    
    <div class="text-gray-400 group-hover:text-blue-500 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
  
  <!-- Company Description -->
  <div class="px-5 pb-3">
    <p class="text-sm text-gray-600 leading-relaxed"><%= truncate(company.description, length: 120) %></p>
  </div>
  
  <!-- Company Details -->
  <div class="px-5 pb-4">
    <% if company.website.present? %>
      <p class="text-sm text-gray-600 mb-2 flex items-center">
        <svg class="w-4 h-4 mr-1.5 flex-shrink-0 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <%= company.website.gsub(/^https?:\/\//, '').gsub(/\/$/, '') %>
      </p>
    <% end %>
    
    <% if company.location.present? %>
      <p class="text-sm text-gray-600 flex items-center mb-2">
        <svg class="w-4 h-4 mr-1.5 flex-shrink-0 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
        </svg>
        <%= company.location %>
      </p>
    <% end %>
  </div>
  
  <!-- Tags and Badges -->
  <div class="border-t border-gray-100 px-3 py-3.5 bg-gray-50 flex flex-wrap gap-2">
    <% if company.categories.any? %>
      <% company.categories.first(3).each do |category| %>
        <span class="px-2.5 py-1 bg-gray-200 text-gray-700 rounded-full text-xs font-medium">
          <%= category.name %>
        </span>
      <% end %>
    <% end %>
    
    <% if company.tags.any? %>
      <% company.tags.first(2).each do |tag| %>
        <span class="px-2.5 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-medium">
          #<%= tag.name %>
        </span>
      <% end %>
    <% end %>
  </div>
  
  <!-- Footer with Actions -->
  <div class="border-t border-gray-100 px-5 py-4 flex justify-between items-center bg-white">
    <div class="text-xs text-gray-500">
      Posted <%= time_ago_in_words(company.created_at) %> ago
    </div>
    
    <div class="flex gap-3">
      <%= link_to "#", class: "px-3.5 py-2 border border-gray-200 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-300 transition-colors" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          Save
        </span>
      <% end %>
      <%= link_to company_path(company), class: "px-3.5 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg text-sm font-medium hover:from-blue-700 hover:to-blue-800 transition-colors shadow-sm" do %>
        <span class="flex items-center">
          Learn more
          <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </span>
      <% end %>
    </div>
  </div>
</div> 