<div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 overflow-hidden group transform hover:-translate-y-1">
  <!-- Company Header with Logo and Status -->
  <div class="p-5 flex items-center gap-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-gray-100">
    <div class="w-14 h-14 rounded-xl bg-white flex items-center justify-center overflow-hidden border-2 border-gray-200/50 shadow-sm group-hover:border-blue-200 transition-colors">
      <% if company.logo.attached? %>
        <%= image_tag company.logo, class: "w-12 h-12 object-contain scale-95 group-hover:scale-100 transition-transform" %>
      <% else %>
        <span class="text-2xl text-blue-500">üè¢</span>
      <% end %>
    </div>
    
    <div class="flex-1">
      <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">
        <%= link_to company.name, company_path(company), class: "hover:text-blue-600 hover:underline underline-offset-4 decoration-2" %>
      </h3>
      <% if company.published? %>
        <span class="inline-flex items-center text-xs font-medium text-green-700 bg-green-100 px-2.5 py-1 rounded-full mt-1">
          <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5 animate-pulse"></span>
          Actively Hiring
        </span>
      <% end %>
    </div>

    <!-- Chevron icon updated -->
    <div class="text-gray-400 group-hover:text-blue-500 transition-colors transform group-hover:translate-x-1">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
  
  <!-- Company Description updated -->
  <div class="px-5 pb-3 pt-4">
    <p class="text-sm text-gray-700 leading-relaxed font-[450]"><%= truncate(company.description, length: 120) %></p>
  </div>
  
  <!-- Tags and Badges updated -->
  <div class="border-t border-gray-100 px-5 py-3.5 bg-gray-50 flex flex-wrap gap-2">
    <% if company.categories.any? %>
      <% company.categories.first(3).each do |category| %>
        <span class="px-3 py-1.5 bg-white border border-gray-200 text-gray-700 rounded-lg text-xs font-medium shadow-sm hover:bg-gray-50 transition-colors">
          <%= category.name %>
        </span>
      <% end %>
    <% end %>
    
    <% if company.tags.any? %>
      <% company.tags.first(2).each do |tag| %>
        <span class="px-3 py-1.5 bg-blue-50 border border-blue-100 text-blue-700 rounded-lg text-xs font-medium shadow-sm hover:bg-blue-100 transition-colors">
          #<%= tag.name %>
        </span>
      <% end %>
    <% end %>
  </div>
  
  <!-- Footer with Actions updated -->
  <div class="border-t border-gray-100 px-5 py-4 flex justify-between items-center bg-white">
    <div class="text-xs text-gray-500 font-medium">
      <svg class="w-4 h-4 inline-block mr-1.5 -mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Added <%= time_ago_in_words(company.created_at) %> ago
    </div>
    
    <div class="flex gap-2">
      <%= link_to "#", class: "px-3.5 py-2 border border-gray-200 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-300 transition-colors shadow-sm hover:shadow-md" do %>
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1.5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
          </svg>
          Save
        </span>
      <% end %>
      <%= link_to company_path(company), class: "px-4 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg text-sm font-medium hover:from-blue-700 hover:to-blue-800 transition-all shadow-sm hover:shadow-md flex items-center" do %>
        View Opportunities
        <svg class="w-4 h-4 ml-2 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      <% end %>
    </div>
  </div>
</div> 