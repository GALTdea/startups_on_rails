<div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-shadow duration-300">
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h3 class="text-lg font-bold text-gray-900 mb-2"><%= listing.title %></h3>
        <p class="text-gray-600 mb-4"><%= listing.category.name %></p>
      </div>
      <% if listing.featured_until.present? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          <%= pluralize(listing.days_remaining, 'day') %>
        </span>
      <% end %>
    </div>

    <div class="space-y-3 mb-6">
      <% if listing.featured_listing_items.any? %>
        <% listing.featured_listing_items.first(10).each do |item| %>
          <div class="flex items-center space-x-3 p-2 rounded-md hover:bg-gray-50">
            <div class="flex-shrink-0">
              <% if item.featurable.is_a?(Company) && item.featurable.respond_to?(:logo_url) %>
                <%= image_tag item.featurable.logo_url, class: "h-8 w-8 rounded-full object-cover", alt: item.featurable.name %>
              <% else %>
                <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0h8v12H6V4z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate"><%= item.featurable.name %></p>
              <p class="text-xs text-gray-500"><%= item.featurable.class.name %></p>
            </div>
          </div>
        <% end %>
        <% if listing.featured_listing_items.count > 10 %>
          <div class="text-center text-sm text-gray-500">
            +<%= listing.featured_listing_items.count - 10 %> more items
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-4 text-sm text-gray-500">
          No items added yet
        </div>
      <% end %>
    </div>

    <% 
      # Determine the appropriate link based on category type
      case listing.category.category_type
      when 'industry'
        link_path = companies_path(category: listing.category.id)
        link_text = "View companies in #{listing.category.name}"
      when 'technology'
        link_path = technologies_path
        link_text = "Explore #{listing.category.name} technology"
      when 'solution'
        link_path = solutions_path
        link_text = "Discover #{listing.category.name} solutions"
      else
        link_path = companies_path(category: listing.category.id)
        link_text = "View all companies"
      end
    %>
    <%= link_to link_text, link_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
  </div>
</div> 