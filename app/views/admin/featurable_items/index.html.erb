<div class="p-4">
  <div class="mb-6">
    <h2 class="text-2xl font-bold dark:text-white">Select Item to Feature</h2>
    <p class="text-gray-500 dark:text-gray-400">Choose an item to feature in <%= @featured_listing.title %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @featurable_items.each do |item| %>
      <div class="p-4 bg-white rounded-lg shadow dark:bg-gray-800">
        <div class="flex items-center justify-between mb-4">
          <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white">
            <%= item.name %>
          </h5>
          <%= button_to admin_featured_listing_featurable_item_path(@featured_listing, type: item.class.name, id: item.id),
              method: :post,
              class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
          <% end %>
        </div>

        <div class="flow-root">
          <div class="flex items-center space-x-4">
            <div class="flex-1">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= item.class.name %>
              </p>
              <% if item.respond_to?(:description) %>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">
                  <%= truncate(item.description, length: 100) %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @featurable_items.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500 dark:text-gray-400">No items available to feature</p>
      <%= link_to "Back to Featured Listings", admin_featured_listings_path,
          class: "mt-4 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
  <% end %>
</div> 