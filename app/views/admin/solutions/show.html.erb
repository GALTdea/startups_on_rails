<div class="flex justify-between items-center mb-6">
  <div class="flex items-center">
    <%= link_to admin_solutions_path, class: "text-gray-400 hover:text-gray-600 mr-2" do %>
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    <% end %>
    <h1 class="text-2xl font-bold"><%= @solution.name %></h1>
  </div>
  
  <div class="flex space-x-2">
    <%= link_to solution_path(@solution), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
      View Public
    <% end %>
    
    <%= link_to edit_admin_solution_path(@solution), class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
      <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
      </svg>
      Edit
    <% end %>
    
    <%= button_to admin_solution_path(@solution), method: :delete, data: { confirm: "Are you sure you want to delete this solution?" }, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
      <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Delete
    <% end %>
  </div>
</div>

<div class="bg-white shadow-sm rounded-lg overflow-hidden">
  <div class="p-6">
    <div class="flex items-center mb-6">
      <% if @solution.logo.attached? %>
        <%= image_tag @solution.logo.variant(resize_to_limit: [80, 80]), class: "h-20 w-20 mr-4 rounded-lg object-contain bg-gray-100" %>
      <% else %>
        <div class="h-20 w-20 mr-4 rounded-lg bg-gray-100 flex items-center justify-center text-gray-500">
          <svg class="h-10 w-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
          </svg>
        </div>
      <% end %>
      
      <div>
        <h2 class="text-xl font-semibold mb-1"><%= @solution.name %></h2>
        <div class="flex items-center">
          <% if @solution.published %>
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 mr-2">Published</span>
          <% else %>
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 mr-2">Draft</span>
          <% end %>
          
          <% if @solution.company %>
            <span class="text-sm text-gray-500">
              Offered by 
              <%= link_to @solution.company.name, admin_company_path(@solution.company), class: "text-blue-600 hover:text-blue-900" %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-200 pt-4">
      <dl>
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3">
          <dt class="text-sm font-medium text-gray-500">Website</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <a href="<%= @solution.website %>" target="_blank" class="text-blue-600 hover:text-blue-900">
              <%= @solution.website %>
              <svg class="inline-block h-4 w-4 ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Solution Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @solution.solution_type %></dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Deployment Type</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @solution.deployment_type %></dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Pricing</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @solution.pricing.presence || "Not specified" %></dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Popularity Score</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @solution.popularity %></dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @solution.created_at.strftime("%B %d, %Y at %H:%M") %>
            (<%= time_ago_in_words(@solution.created_at) %> ago)
          </dd>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @solution.updated_at.strftime("%B %d, %Y at %H:%M") %>
            (<%= time_ago_in_words(@solution.updated_at) %> ago)
          </dd>
        </div>
        
        <div class="py-3 border-t border-gray-200">
          <dt class="text-sm font-medium text-gray-500 mb-2">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 prose max-w-none">
            <%= @solution.description %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div> 