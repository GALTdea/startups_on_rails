<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-8">Admin Dashboard</h1>
  
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%#= render 'admin/dashboard/stat_card', 
         title: "Total Companies", 
         value: @stats[:total_companies],
         icon: :office_building %>
         
    <%#= render 'admin/dashboard/stat_card',
         title: "Pending Approvals",
         value: @stats[:pending_approvals],
         icon: :clock %>
         
    <%#= render 'admin/dashboard/stat_card',
         title: "Active Users",
         value: @stats[:user_counts][:company_owners],
         icon: :users %>
  </div>

  <!-- Quick Actions -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold mb-4">Quick Actions</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <!-- New Company -->
      <%= link_to new_admin_company_path, class: "p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all" do %>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-blue-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span class="text-sm font-medium text-gray-700">New Company</span>
        </div>
      <% end %>

      <!-- Manage Users -->
      <%= link_to admin_users_path, class: "p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all" do %>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-green-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span class="text-sm font-medium text-gray-700">Manage Users</span>
        </div>
      <% end %>

      <!-- Pending Approvals -->
      <%= link_to admin_companies_path(pending: true), class: "p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all" do %>
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-yellow-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span class="text-sm font-medium text-gray-700">Pending Approvals</span>
          <% if @stats[:pending_approvals] > 0 %>
            <span class="mt-1 px-2 py-1 text-xs font-medium text-yellow-800 bg-yellow-100 rounded-full">
              <%= @stats[:pending_approvals] %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- Settings -->
      <a href="#" class="p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all">
        <div class="flex flex-col items-center">
          <svg class="w-8 h-8 text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm font-medium text-gray-700">Settings</span>
        </div>
      </a>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-lg font-semibold mb-4">Recent Companies</h2>
    <%= render 'admin/companies/table', companies: Company.order(created_at: :desc).limit(5), show_status: false %>
    <div class="mt-4 text-right">
      <%= link_to "View all companies â†’", admin_companies_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
    </div>
  </div>
</div>
