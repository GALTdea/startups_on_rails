<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Featured Listings</h1>
    <%= link_to new_admin_featured_listing_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 flex items-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Featured Listing
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @featured_listings.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Position</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Featured Until</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @featured_listings.each do |listing| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= listing.position %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= listing.title %></div>
                <% if listing.description.present? %>
                  <div class="text-sm text-gray-500 truncate max-w-xs"><%= listing.description %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                    <%= listing.category.category_type.humanize %>
                  </span>
                  <span class="ml-2 text-sm text-gray-900"><%= listing.category.name %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if listing.active? %>
                  <% if listing.expired? %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                      Expired
                    </span>
                  <% else %>
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      Active
                    </span>
                  <% end %>
                <% else %>
                  <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    Inactive
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if listing.featured_until.present? %>
                  <%= listing.featured_until.strftime("%b %d, %Y") %>
                  <% if listing.days_remaining && listing.days_remaining > 0 %>
                    <span class="text-xs text-gray-500">(<%= listing.days_remaining %> days left)</span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-500">No end date</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to "View", admin_featured_listing_path(listing), 
                      class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Edit", edit_admin_featured_listing_path(listing), 
                      class: "text-indigo-600 hover:text-indigo-900" %>
                <%= button_to "Delete", admin_featured_listing_path(listing), 
                      method: :delete,
                      form: { data: { turbo_confirm: "Are you sure you want to delete this featured listing?" } },
                      class: "text-red-600 hover:text-red-900 bg-transparent border-none p-0 cursor-pointer inline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <p>No featured listings yet.</p>
        <p class="mt-2">
          <%= link_to "Create your first featured listing", new_admin_featured_listing_path, class: "text-blue-600 hover:underline" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
