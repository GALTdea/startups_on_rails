<%= turbo_frame_tag "featured_listings" do %>
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Featured Listings</h1>
      <%= link_to "New Featured Listing", new_admin_featured_listing_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @featured_listings.each do |listing| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-lg font-semibold text-gray-900"><%= listing.title %></h2>
                <p class="text-sm text-gray-500"><%= listing.category.name %></p>
              </div>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= listing.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                  <%= listing.active? ? 'Active' : 'Inactive' %>
                </span>
                <% if listing.featured_until.present? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= pluralize(listing.days_remaining, 'day') %>
                  </span>
                <% end %>
              </div>
            </div>

            <div class="space-y-3 mb-6">
              <% if listing.featured_listing_items.any? %>
                <% listing.featured_listing_items.first(10).each do |item| %>
                  <div class="flex items-center space-x-3 p-2 rounded-md hover:bg-gray-50">
                    <div class="flex-shrink-0">
                      <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                        <% if item.featurable.is_a?(Company) %>
                          <% if item.featurable.respond_to?(:logo_url) && item.featurable.logo_url.present? %>
                            <%= image_tag item.featurable.logo_url, class: "h-8 w-8 rounded-full object-cover", alt: item.featurable.name %>
                          <% else %>
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                            </svg>
                          <% end %>
                        <% else %>
                          <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 0h8v12H6V4z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate"><%= item.featurable.name %></p>
                      <p class="text-xs text-gray-500"><%= item.featurable.class.name %></p>
                    </div>
                  </div>
                <% end %>
                <% if listing.featured_listing_items.count > 10 %>
                  <div class="text-center text-sm text-gray-500">
                    +<%= listing.featured_listing_items.count - 10 %> more items
                  </div>
                <% end %>
              <% else %>
                <div class="text-center py-4 text-sm text-gray-500">
                  No items added yet
                </div>
              <% end %>
            </div>

            <div class="flex justify-between items-center pt-4 border-t border-gray-200">
              <div class="flex items-center space-x-4">
                <%= link_to "View Details", admin_featured_listing_path(listing), 
                    class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                <%= link_to "Edit", edit_admin_featured_listing_path(listing), 
                    class: "text-sm font-medium text-gray-600 hover:text-gray-800" %>
              </div>
              <%= button_to admin_featured_listing_path(listing), 
                  method: :delete,
                  class: "text-sm font-medium text-red-600 hover:text-red-800",
                  data: { turbo_confirm: "Are you sure you want to delete this listing?" } do %>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
